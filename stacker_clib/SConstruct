if link_against_casa :
# Also add code here.
    if int(svnversion) >= 36590:
        env.Append(CPPPATH = [dl_casacore_path,
                              os.path.join(dl_casacore_path, 'casacore'),
                              os.path.join(dl_casacore_path, 'casacode'),
                              casapyinclude,
                             ])
